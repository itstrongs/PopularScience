<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:fitsSystemWindows">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- ————————————————— TextView style ————————————————— -->
    <!-- 普通蓝色TextView样式 -->
    <style name="text_common_style_blue">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/bg_color</item>
        <item name="android:textSize">@dimen/text_common_size</item>
    </style>

    <!-- 普通白色TextView样式 -->
    <style name="text_common_style_white">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/color_white</item>
        <item name="android:textSize">@dimen/text_common_size</item>
    </style>

    <!-- 普通灰色TextView样式 -->
    <style name="text_common_style_gray">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/color_gray</item>
        <item name="android:textSize">@dimen/text_common_size</item>
    </style>

    <!-- 标题蓝色TextView样式 -->
    <style name="text_title_style_blue">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/bg_color</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textSize">@dimen/text_title_size</item>
    </style>

    <!-- 标题白色TextView样式 -->
    <style name="text_title_style_white">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/color_white</item>
        <item name="android:textSize">@dimen/text_title_size</item>
    </style>

    <!-- 签到日历样式 -->
    <style name="sign_in_text_view">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/color_white</item>
        <item name="android:textSize">@dimen/text_title_size</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- Discover菜单TextView样式 -->
    <style name="text_discover_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">@dimen/fragment_small_space</item>
        <item name="android:background">@drawable/shape_frame_gray</item>
        <item name="android:textSize">20sp</item>
    </style>

    <!-- My菜单TextView样式 -->
    <style name="text_my_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">@dimen/my_menu_text_size</item>
    </style>

    <!-- 搜索框样式 -->
    <style name="search_box_style">
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawableLeft">@mipmap/icon_search</item>
        <item name="android:background">@drawable/shape_search_box</item>
        <item name="android:textColorHint">@color/color_white</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:visibility">gone</item>
        <item name="android:textSize">10sp</item>
        <item name="android:paddingLeft">@dimen/fragment_small_space</item>
        <item name="android:layout_marginTop">@dimen/fragment_small_space</item>
    </style>

    <!-- 列表title样式 -->
    <style name="list_title_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">50dp</item>
        <item name="android:paddingRight">50dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:textSize">@dimen/text_title_size</item>
        <item name="android:textColor">@color/color_white</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:background">@color/bg_color</item>
        <item name="android:drawableLeft">@mipmap/list_title_style_0</item>
        <item name="android:drawableRight">@mipmap/list_title_style_1</item>
    </style>

    <!-- 竞赛列表样式 -->
    <style name="contest_list_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginLeft">@dimen/fragment_small_space</item>
        <item name="android:layout_marginRight">@dimen/fragment_small_space</item>
        <item name="android:layout_marginTop">@dimen/fragment_small_space</item>
        <item name="android:background">@drawable/shape_frame_gray</item>
    </style>

    <!-- 竞赛列表左图样式 -->
    <style name="contest_list_left_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginLeft">@dimen/fragment_small_space</item>
    </style>

    <!-- 竞赛列表右图样式 -->
    <style name="contest_list_right_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginRight">@dimen/fragment_small_space</item>
    </style>

    <!-- 互动游戏选项样式 -->
    <style name="style_radio_game_option">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:visibility">visible</item>
        <item name="android:singleLine">true</item>
    </style>

    <!-- ————————————————— Button style ————————————————— -->
    <!-- 按钮样式 -->
    <style name="style_btn_bg_blue_text_white">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:textColor">@color/color_white</item>
        <item name="android:textSize">@dimen/text_title_size</item>
        <item name="android:background">@drawable/selector_btn_touch</item>
        <item name="android:paddingLeft">@dimen/fragment_big_space</item>
        <item name="android:paddingRight">@dimen/fragment_big_space</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <!-- 按钮样式 -->
    <style name="style_btn_bg_blue_text_white2">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/color_white</item>
        <item name="android:textSize">@dimen/text_title_size</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:background">@drawable/selector_btn_touch</item>
        <item name="android:paddingLeft">@dimen/fragment_big_space</item>
        <item name="android:paddingRight">@dimen/fragment_big_space</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

</resources>
