<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:padding="@dimen/fragment_small_space">

    <ImageView
        android:id="@+id/img_video_icon"
        android:layout_width="80dp"
        android:layout_height="80dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/fragment_small_space"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_video_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/color_block"
            android:textStyle="bold"
            android:text="科普头条标题"/>

        <TextView
            android:id="@+id/text_video_content"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

            <RelativeLayout
                android:layout_width="90dp"
                android:layout_height="30dp"
                android:background="@drawable/shape_blue">

                <TextView
                    android:id="@+id/text_video_progress"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:background="@drawable/shape_gray"
                    android:layout_marginLeft="0dp"/>

                <Button
                    android:id="@+id/btn_video_download"
                    android:layout_width="90dp"
                    android:layout_height="30dp"
                    android:background="@android:color/transparent"
                    android:drawableLeft="@mipmap/video_download"
                    android:paddingLeft="@dimen/fragment_small_space"
                    android:text="下 载"/>
            </RelativeLayout>

            <Button
                android:id="@+id/btn_video_play"
                android:layout_width="90dp"
                android:layout_height="30dp"
                android:background="@drawable/shape_blue"
                android:layout_marginLeft="@dimen/fragment_small_space"
                android:paddingLeft="@dimen/fragment_small_space"
                android:drawableLeft="@mipmap/video_play"
                android:text=" 播 放"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>