<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@mipmap/contest_game_bg_2">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/contest_game_1"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/fragment_big_space"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="@dimen/fragment_small_space"
        android:layout_marginBottom="@dimen/fragment_small_space"
        android:background="@drawable/shape_bg_frame_transparent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/shape_bg_frame_white"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_day_content"
                style="@style/text_title_style_blue"
                android:layout_marginTop="@dimen/fragment_big_space"
                android:layout_marginLeft="@dimen/fragment_small_space"
                android:textStyle="bold"
                android:text="1.是谁发明了导弹？"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="40dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <RadioButton
                            android:id="@+id/radio_game_option_0"
                            style="@style/style_radio_game_option"
                            android:text="A"/>

                        <RadioButton
                            android:id="@+id/radio_game_option_1"
                            style="@style/style_radio_game_option"
                            android:layout_marginTop="30dp"
                            android:text="CCC"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginLeft="10dp">

                        <RadioButton
                            android:id="@+id/radio_game_option_2"
                            style="@style/style_radio_game_option"
                            android:text="BB"/>

                        <RadioButton
                            android:id="@+id/radio_game_option_3"
                            style="@style/style_radio_game_option"
                            android:layout_marginTop="30dp"
                            android:text="DDDD"/>
                    </LinearLayout>
                </LinearLayout>
        </LinearLayout>
    </FrameLayout>

    <Button
        android:id="@+id/btn_everyday_quit"
        style="@style/style_btn_bg_blue_text_white"
        android:layout_marginBottom="@dimen/fragment_big_space"
        android:text="退出游戏"/>
</LinearLayout>