<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/img_read_banner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@mipmap/banner_read"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:layout_centerVertical="true"
        android:layout_marginTop="100dp">

        <ImageView
            android:id="@+id/img_read_icon"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@mipmap/img_error"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_read_title"
                style="@style/text_title_style_blue"
                android:layout_marginTop="10dp"
                android:singleLine="true"/>

            <TextView
                android:id="@+id/text_read_content"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginTop="@dimen/fragment_small_space"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="50dp">

        <Button
            android:id="@+id/btn_read_start"
            style="@style/style_btn_bg_blue_text_white"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:text="点击阅读"/>

        <Button
            android:id="@+id/btn_read_more"
            style="@style/style_btn_bg_blue_text_white"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginLeft="60dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="25dp"
            android:text="更多图书"/>
    </LinearLayout>
</RelativeLayout>