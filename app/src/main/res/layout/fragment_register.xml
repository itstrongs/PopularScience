<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/user_bg"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="30dp"
        android:src="@mipmap/user_default_icon" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/register_line_space"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="@dimen/register_item_width"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/register_menu_0"
                android:singleLine="true"
                android:text=" 用户名"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/edit_user_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/fragment_small_space"
                android:background="@drawable/shape_frame_gray"
                android:hint="请填写您的手机号"
                android:singleLine="true"
                android:textColorHint="@color/color_gray" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/fragment_small_space">

            <TextView
                android:layout_width="@dimen/register_item_width"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/register_menu_1"
                android:singleLine="true"
                android:text=" 密    码"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/edit_user_pass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/fragment_small_space"
                android:background="@drawable/shape_frame_gray"
                android:hint="请输入密码"
                android:password="true"
                android:singleLine="true"
                android:textColorHint="@color/color_gray" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/fragment_small_space">

            <TextView
                android:layout_width="@dimen/register_item_width"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/edit_user_pass_again"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/fragment_small_space"
                android:background="@drawable/shape_frame_gray"
                android:hint="再次输入密码"
                android:password="true"
                android:singleLine="true"
                android:textColorHint="@color/color_gray" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/fragment_small_space">

            <TextView
                android:layout_width="@dimen/register_item_width"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/register_menu_2"
                android:singleLine="true"
                android:text=" 昵    称"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/edit_user_nickname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/fragment_small_space"
                android:background="@drawable/shape_frame_gray"
                android:hint="请输入昵称"
                android:singleLine="true"
                android:textColorHint="@color/color_gray" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/fragment_small_space">

            <TextView
                android:layout_width="@dimen/register_item_width"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/register_menu_3"
                android:singleLine="true"
                android:text=" 邮    箱"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/edit_user_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/fragment_small_space"
                android:background="@drawable/shape_frame_gray"
                android:hint="123456@qq.com"
                android:singleLine="true"
                android:textColorHint="@color/color_gray" />
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/btn_register_submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_btn_touch"
        android:text="提 交"
        android:textColor="@color/color_white"
        android:textSize="@dimen/text_title_size" />
</LinearLayout>