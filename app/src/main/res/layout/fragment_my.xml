<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/text_sign_in"
        style="@style/text_title_style_white"
        android:layout_marginRight="@dimen/fragment_big_space"
        android:layout_marginTop="30dp"
        android:background="@drawable/shape_btn_blue"
        android:drawableLeft="@mipmap/sign_in_icon"
        android:gravity="center_vertical"
        android:layout_alignParentRight="true"
        android:text=" 签到" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerVertical="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_margin="@dimen/fragment_big_space">

            <TextView
                android:id="@+id/text_my_rank"
                style="@style/text_my_style"
                android:drawableTop="@mipmap/my_menu_0"
                android:text="我的排名"
                android:textColor="#ED7A40" />

            <TextView
                android:id="@+id/text_my_setting"
                style="@style/text_my_style"
                android:drawableTop="@mipmap/my_menu_1"
                android:text="账号设置"
                android:textColor="#4071F4" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/fragment_big_space">

            <TextView
                android:id="@+id/text_my_comment"
                style="@style/text_my_style"
                android:drawableTop="@mipmap/my_menu_2"
                android:text="意见评论"
                android:textColor="#85CA00" />

            <TextView
                android:id="@+id/text_my_collect"
                style="@style/text_my_style"
                android:drawableTop="@mipmap/my_menu_3"
                android:text="我的收藏"
                android:textColor="#8647F4" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>