<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/layout_answer_bg"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@mipmap/contest_game_bg_0">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/contest_game_0"

            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/fragment_big_space"/>

        <TextView
            android:id="@+id/text_game_timer"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_frame_blue"
            android:layout_alignParentRight="true"
            android:layout_margin="@dimen/fragment_big_space"
            android:padding="5dp"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/color_red"
            android:textAlignment="center"
            android:text="100:00"/>
    </RelativeLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="@dimen/fragment_small_space"
        android:layout_marginBottom="@dimen/fragment_small_space"
        android:background="@drawable/shape_bg_frame_transparent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/shape_bg_frame_white"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_game_content"
                style="@style/text_title_style_blue"
                android:layout_marginTop="@dimen/fragment_big_space"
                android:layout_marginLeft="@dimen/fragment_small_space"
                android:textStyle="bold"
                android:text="1.是谁发明了导弹？"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="40dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RadioButton
                        android:id="@+id/radio_game_option_0"
                        style="@style/style_radio_game_option"
                        android:text="A"/>

                    <RadioButton
                        android:id="@+id/radio_game_option_1"
                        style="@style/style_radio_game_option"
                        android:layout_marginTop="30dp"
                        android:text="CCC"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="10dp">

                    <RadioButton
                        android:id="@+id/radio_game_option_2"
                        style="@style/style_radio_game_option"
                        android:text="BB"/>

                    <RadioButton
                        android:id="@+id/radio_game_option_3"
                        style="@style/style_radio_game_option"
                        android:layout_marginTop="30dp"
                        android:text="DDDD"/>
                </LinearLayout>
            </LinearLayout>

