<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/img_read_icon"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@mipmap/icon_book" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="15dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_read_title"
            style="@style/text_title_style_blue"
            android:singleLine="true" />

        <TextView
            android:id="@+id/text_read_content"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/fragment_small_space"
            android:layout_weight="1" />

        <Button
            android:id="@+id/btn_book_reading"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_gravity="right"
            android:layout_margin="@dimen/fragment_small_space"
            android:background="@drawable/selector_btn_touch"
            android:text="点击阅读"
            android:textColor="@color/color_white"
            android:textSize="16sp" />
    </LinearLayout>
</LinearLayout>