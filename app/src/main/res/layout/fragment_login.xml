<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@mipmap/user_bg"
    android:layout_width="match_parent"
    android:gravity="center_horizontal"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/user_default_icon"
        android:layout_marginTop="35dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp">

        <EditText
            android:id="@+id/edit_user_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint=" 用户名"
            android:singleLine="true"
            android:textColor="@color/bg_color"
            android:textColorHint="@color/bg_color"
            android:paddingLeft="10dp"
            android:drawableLeft="@mipmap/user_login_menu_0"
            android:background="@drawable/shape_frame_gray"/>

        <EditText
            android:id="@+id/edit_user_pass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint=" 密 码"
            android:password="true"
            android:singleLine="true"
            android:textColor="@color/bg_color"
            android:textColorHint="@color/bg_color"
            android:drawableLeft="@mipmap/user_login_menu_1"
            android:layout_marginTop="@dimen/fragment_big_space"
            android:paddingLeft="10dp"
            android:background="@drawable/shape_frame_gray"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/fragment_big_space">

            <Button
                android:id="@+id/btn_user_login"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="登  录"
                android:textColor="@color/color_white"
                android:textSize="@dimen/text_title_size"
                android:layout_marginRight="@dimen/fragment_small_space"
                android:background="@drawable/selector_btn_touch"/>

            <Button
                android:id="@+id/btn_user_register"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="注  册"
                android:textColor="@color/color_white"
                android:textSize="@dimen/text_title_size"
                android:background="@drawable/selector_btn_touch"/>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="@dimen/fragment_big_space"
            android:text="忘记密码"/>
    </LinearLayout>
</LinearLayout>